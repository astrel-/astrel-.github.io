
<img {{bind-attr src=imgURL}}>
<div>
  <p>{{marketName}}</p>
</div>
<div class="game">
  {{!--game--}}
  <img src="/pic/games/dota2.jpg">
  <span>{{type}}</span>

</div>
<div class="game">
<span>{{!--descriptions--}}</span>
</div>
<div>
<span>
  Tags: {{!--tags--}}
</span>
</div>
<div class="sell-item">
{{#if tradable}}
  <button>Sell</button>
{{else}}
   <span>Вы не можете обмениваться этим предметом</span>
{{/if}}
</div>


{{!--
App.Item = Ember.Object.extend(
    id: null
    game: null
    classid: null
    instanceid: null
    descriptions: []
    marketName: ""
    name_color: ""
    tags: []
    tradable: null
    marketable: null
    type: ""
    init: ( imgURL, imgURLlarge ) ->
        @imgURL = "http://steamcommunity-a.akamaihd.net/economy/image/" + @imgURL
        @imgURLlarge = "http://steamcommunity-a.akamaihd.net/economy/image/" + @imgURLlarge
        return
)
